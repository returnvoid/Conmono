<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    android:background="@color/cl_returnvoid_mypic_grey">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mono_logo"
            android:layout_gravity="center|top"
            android:scaleType="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            android:background="@drawable/conmono_logo"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/conmono_logotipo"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/mono_logo"
            android:layout_centerHorizontal="true"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conmono_enter_button"
            android:background="@drawable/conmono_yellow_button"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"/>

    <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.facebook.widget.LoginButton"
            android:id="@+id/facebook_login_button"
            android:layout_gravity="center"
            android:layout_below="@+id/conmono_enter_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"/>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:id="@+id/imageView"
            android:background="#6abe8e"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

</RelativeLayout>
